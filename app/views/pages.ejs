</header>
<main class="maincontent">
    <section class="banner banner__pages">
        <div class="banner__part1">
            <h1 class="banner__title">Our Blog</h1>
            <p class="banner__description banner__description--pages"><a href="/" class="banner__link"> Home</a> / Our Blog</p>
        </div>
    </section>
    <div>
        <form action="" class="search__form " method="POST">
            <input class="contactform__input" type="text" name="search" id="search" placeholder="Search Articles">
            <button type="submit" class="search__button">&#x1F50D;</button></form>
    </div>
    <div class="container">
        <section class="blogcontent">
            <h3 class="content__subtitle content__subtitle--border">Latest Blog</h3>
            <h2 class="content__title content__title--size">Latest articles from our blog</h2>
            
     <div class="article__container">

        <% for (const article of articles){ %>         
            <article class="blogarticle">
                <div class="article__text">
               <div class="article__img"><img src="../uploads/<%=article.main_img%>" alt="blog1" class="blogarticle__image"></div> 
                <h3 class="blogarticle__title"><%=article.maintitle%></h3>
                <p class="blogarticle__details-page">
                    <img src="../img/folder.png" alt="folder icon" class="blogarticle__img"><span class="webdesign"><%=article.tag.name%></span>
                    <img src="../img/bubble-chat.png" alt="comment icon" class="blogarticle__img"><span class="webdesign"><%=article.comments.length%></span>                  
            </p>
                <p class="blogarticle__description"><%=article.introduction%></p></div>
                <a href="/blogdetails/<%=article.id%>" class="joinclass__btn joinclass__btn--center">Read More</a>
            </article>
        <%}%>
           
     </div>
     </section>
     </div>
    </main>
