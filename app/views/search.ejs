    </div>
</header>
<main class="maincontent">
    <section class="banner banner__pages">
        <div class="banner__part1">
            <h1 class="banner__title">Searched Articles</h1>
            <p class="banner__description banner__description--pages"><a href="/" class="banner__link">
                    Home</a> / Searched Articles</p>
        </div>
    </section>

<div class="searchedarticle">
    <% if (results === null) {%>
        <p>No searched article</p> 
       <% } else if (results.length === 0) { %>
        <div class="noresult">
        <p class="error">No article found</p>
        </div>
        <%} else {
            for (const article of results){ %>
    <article class="blogarticle">
        <div class="article__text">
            <div class="article__img">
                <img src="../uploads/<%=article.main_img%>" alt="blog1"
                    class="blogarticle__image">
            </div>
            <h3 class="blogarticle__title"><%=article.maintitle%></h3>
            <p class="blogarticle__description"><%=article.introduction%></p>
        </div>
        <a href="/blogdetails/<%=article.id%>" class="joinclass__btn joinclass__btn--center">Read More</a>
    </article>

        <%}}%>
            
 </div>


